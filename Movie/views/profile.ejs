<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Movie</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                </li>


                <li class="nav-item">
                    <a class="nav-link" href="/movie">Movie info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/theater">Theater info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#">unavailable</a>
                </li>

                <li class="nav-item my-2 my-lg-0">
                    <a class="nav-link disabled" href="#">unavailable</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/profile">User Profile<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/signout">Sign out</a>
                    </li>
                </ul>
            </form>
        </div>
    </nav>


    <div class="container mt-4">
        <div class="row">
            <div class="col-4">
                <div class="card" style="width: 100%;">
                    <img class="card-img-top" src="/avatar.png" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= user.LastName +","+ user.FirstName%>
                        </h5>
                        <p class="card-text">
                            <%= user.Bio%>
                        </p>
                        <a href="http//www.google.com" class="btn btn-primary" style="width: 100%;">
                            <%= user.Email %>
                        </a>
                    </div>
                </div>
            </div>

            <div class=" col-8 ">
                <div class="card text-center ">
                    <div class="card-header ">
                        Featured
                    </div>
                    <div class="card-body ">
                        <h5 class="card-title ">Hi,
                            <%= user.LastName +","+ user.FirstName%> welcome back</h5>
                        <p class="card-text ">You can add your bio here</p>
                        <a href="# " class="btn btn-primary ">Go somewhere</a>
                    </div>
                    <div class="card-footer text-muted ">
                        NODE JS PROCESSING
                    </div>
                </div>
            </div>


