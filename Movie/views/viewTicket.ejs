            <script>
                function check() {
                    var full = document.getElementById("Full")
                    var discount = document.getElementById("Discount")
                    var Intfull = parseInt(full.value)
                    var IntDiscount = parseInt(discount.value)

                    var total = Intfull + IntDiscount
                    console.log(total)
                    if (total <= 0 || total > 10) {
                        alert("You can't order more than 10 tickets. Please try again")
                        return false
                    }
                    return true;
                }
            </script>
