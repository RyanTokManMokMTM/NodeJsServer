            <script>
                var shopping_list = {}

                function FullPriceCount() {
                    var User_total = document.getElementById("user_total_price")
                    var table = document.getElementById("myshoppinglist")
                    console.log(table)
                        //full
                    var FullticketCount = document.getElementById("Full") // get total
                    var Fullprice = document.getElementById("FullPrice") // get price
                    var Fulltotal = document.getElementById("FullTotal")
                    var FullticketPrice = Fullprice.textContent.substring(1) //remove dollarside
                    var Full_Int_price = parseInt(FullticketPrice)
                    var Full_Int_total = parseInt(FullticketCount.value)
                    var Full_total_price = Full_Int_price * Full_Int_total
                    Fulltotal.innerHTML = "$ " + Full_total_price

                    if (!shopping_list.hasOwnProperty("FULL TICKET")) {
                        //console.log(shopping_list)
                        shopping_list["FULL TICKET"] = "FULL TICKET"
                        var tr = document.createElement("tr")
                        tr.id = "FULL_TICKET"
                        var td = tr.appendChild(document.createElement("td"))

                        var ticketName = document.createElement("p")
                        var name = "FULL TICKET"
                        var type = td.appendChild(ticketName)
                        type.innerText = name

                        var totalTicket = document.createElement("p")
                        totalTicket.id = "FULL_TICKET_AMOUNT"
                        totalTicket.className = "text-right"
                        var totalamount = "X " + Full_Int_total + " = " + Full_total_price
                        var ticketPrice = td.appendChild(totalTicket)
                        ticketPrice.innerText = totalamount

                        table.insertBefore(tr, table.childNodes[0])
                    } else {
                        if (Full_Int_total != 0) { //if set to 0 remove all
                            var ticket_text = document.getElementById("FULL_TICKET_AMOUNT")
                            var update = "X " + Full_Int_total + " = " + Full_total_price
                            ticket_text.innerText = update
                        } else { //if set to 0 remove all from the list
                            var zero = document.getElementById("FULL_TICKET")
                            zero.remove()
                            delete shopping_list["FULL TICKET"]
                            console.log(shopping_list)
                        }
                    }

                    //set cookie
                    //  console.log(typeof(Cookies.get("FT")))
                    if (Cookies.get("FT") == undefined && Full_Int_total != 0) {
                        var fulllist = {
                            Count: Full_Int_total, //type of ticket
                            Price: Full_Int_price, //total ticket
                            total: Full_total_price
                        }
                        var inFifteenMinutes = new Date(new Date().getTime() + 15 * 60 * 1000);

                        Cookies.set("FT", JSON.stringify(fulllist), {
                            expires: inFifteenMinutes,
                            path: "/ticket",
                        })
                    } else {
                        if (Full_Int_total == 0) {
                            Cookies.remove("FT", {
                                path: "\ticket"
                            })
                        } else {
                            var updateinfo = JSON.parse(Cookies.get("FT"))
                            Cookies.remove("FT", {
                                path: "\ticket"
                            })
                            updateinfo.Count = Full_Int_total
                            updateinfo.Price = Full_Int_price
                            updateinfo.total = Full_total_price
                            var inFifteenMinutes = new Date(new Date().getTime() + 15 * 60 * 1000);

                            Cookies.set("FT", JSON.stringify(updateinfo), {
                                expires: inFifteenMinutes,
                                path: "/ticket",
                            })
                        }
                    }

                    //discount
                    var DiscountticketCount = document.getElementById("Discount")
                    var Discountprice = document.getElementById("DiscountPrice")
                    var Discounttotal = document.getElementById("DiscountTotal")
                    var DiscountticketPrice = Discountprice.textContent.substring(1) // remove dollar side
                    var Discountprice_Int_price = parseInt(DiscountticketPrice) //sub to Int
                    var Discountprice_Int_total = parseInt(DiscountticketCount.value) // sub to Int
                    var user_ticket_total = Full_total_price + (Discountprice_Int_price * Discountprice_Int_total)
                    User_total.innerHTML = "Total$: " + user_ticket_total
                }

                function DiscountPriceCount() {
                    var User_total = document.getElementById("user_total_price")
                    var table = document.getElementById("myshoppinglist")
                        //discount
                    var DiscountticketCount = document.getElementById("Discount")
                    var Discountprice = document.getElementById("DiscountPrice")
                    var Discounttotal = document.getElementById("DiscountTotal")
                    var DiscountticketPrice = Discountprice.textContent.substring(1) // remove dollar side

                    var Discountprice_Int_price = parseInt(DiscountticketPrice) //sub to Int
                    var Discountprice_Int_total = parseInt(DiscountticketCount.value) // sub to Int
                    var Discount_total_price = Discountprice_Int_price * Discountprice_Int_total
                    Discounttotal.innerHTML = "$ " + Discount_total_price

                    if (!shopping_list.hasOwnProperty("DISCOUNT TICKET")) {
                        //console.log(shopping_list)
                        shopping_list["DISCOUNT TICKET"] = "DISCOUNT TICKET"
                        var tr = document.createElement("tr")
                        tr.id = "DISCOUNT_TICKET"
                        var td = tr.appendChild(document.createElement("td"))

                        var ticketName = document.createElement("p")
                        var name = "DISCOUNT TICKET"
                        var type = td.appendChild(ticketName)
                        type.innerText = name

                        var totalTicket = document.createElement("p")
                        totalTicket.id = "DISCOUNT_TICKET_AMOUNT"
                        totalTicket.className = "text-right"
                        var totalamount = "X " + Discountprice_Int_total + " = " + Discount_total_price
                        var ticketPrice = td.appendChild(totalTicket)
                        ticketPrice.innerText = totalamount

                        table.insertBefore(tr, table.childNodes[0])
                    } else {
                        if (Discountprice_Int_total != 0) { //if set to 0 remove all
                            var ticket_text = document.getElementById("DISCOUNT_TICKET_AMOUNT")
                            var update = "X " + Discountprice_Int_total + " = " + Discount_total_price
                            ticket_text.innerText = update
                        } else { //if set to 0 remove all from the list
                            var zero = document.getElementById("DISCOUNT_TICKET")
                            zero.remove()
                            delete shopping_list["DISCOUNT TICKET"]
                                //console.log(shopping_list)
                        }
                    }


                    //set cookie
                    console.log(typeof(Cookies.get("DT")))
                    if (Cookies.get("DT") == undefined && Discountprice_Int_total != 0) {
                        var fulllist = {
                            Count: Discountprice_Int_total, //type of ticket
                            Price: Discountprice_Int_price, //total ticket
                            total: Discount_total_price
                        }
                        var inFifteenMinutes = new Date(new Date().getTime() + 15 * 60 * 1000);

                        Cookies.set("DT", JSON.stringify(fulllist), {
                            expires: inFifteenMinutes,
                            path: "/ticket",
                        })
                    } else {
                        if (Full_Int_total == 0) {
                            Cookies.remove("DT", {
                                path: "\ticket"
                            })
                        } else {

                            var updateinfo = JSON.parse(Cookies.get("DT"))
                            Cookies.remove("DT", {
                                path: "\ticket"
                            })
                            updateinfo.Count = Discountprice_Int_total
                            updateinfo.Price = Discountprice_Int_price
                            updateinfo.total = Discount_total_price
                            var inFifteenMinutes = new Date(new Date().getTime() + 15 * 60 * 1000);

                            Cookies.set("DT", JSON.stringify(updateinfo), {
                                expires: inFifteenMinutes,
                                path: "/ticket",
                            })
                        }
                    }

                    //full
                    var FullticketCount = document.getElementById("Full") // get total
                    var Fullprice = document.getElementById("FullPrice") // get price
                    var Fulltotal = document.getElementById("FullTotal")
                    var FullticketPrice = Fullprice.textContent.substring(1) //remove dollarside
                    var Full_Int_price = parseInt(FullticketPrice)
                    var Full_Int_total = parseInt(FullticketCount.value)

                    var user_ticket_total = Discount_total_price + (Full_Int_price * Full_Int_total)
                    User_total.innerHTML = "Total:$ " + user_ticket_total
                }
            </script>

            <div class=" col-md-7 " style=" margin-left: 2%; ">
